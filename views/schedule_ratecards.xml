<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
                <!--   -->
        <record id="view_schedule_ratecards_form" model="ir.ui.view">
            <field name="name">schedule.ratecards</field>
            <field name="model">schedule.ratecards</field>
            <field name="arch" type="xml">
                <form string="SCHEDULING">
                    <header>
                        <group>
                            <button name="call_another"  type="object" string="INVOKE EVENT" class="oe_highlight"/>
                            <button name="got_something" type="object" string="LOAD" class="oe_highlight"/>
                            <button special="cancel" string="Close" type="object" />

                        </group>
                    </header>
                        <!--<span groups="base.group_user">-->
                            <!--<button string="SCHEDULE" type="object" name="print_report" class="oe_highlight" />-->
                        <!--</span>-->

                    <group col="4" colspan="4">
                        <newline/>
                        <field name="allocating_times"/>
                        <newline/>
                        <field name="scheduled"/>
                        <newline/>
                        <field name="from_date" />
                        <field name="to_date" />
                    </group>

                    <separator string="SCHEDULE ALLOCATION WEEK 1 " />

                     <tree  string="SCHEDULE" editable="top">
                                             <group col="4" colspan="4">
                                                <field name='monday'/>
                                                <field name='tuesday'/>
                                                <field name='wednesday'/>
                                                <field name='thursday'/>
                                                <field name='friday'/>
                                                <field name='saturday'/>
                                                 <field name='sunday'/>
                                                 <field name="spot_total"/>
                                               <field name='price_subtotal'/>
                                       </group>
                    </tree>

                    <separator string="SCHEDULE ALLOCATION WEEK 2 " />

                     <tree  string="SCHEDULE" editable="top">
                                             <group col="4" colspan="4">
                                                <field name='_monday'/>
                                                <field name='_tuesday'/>
                                                <field name='_wednesday'/>
                                                <field name='_thursday'/>
                                                <field name='_friday'/>
                                                <field name='_saturday'/>
                                                 <field name='_sunday'/>
                                                 <field name="_spot_total"/>
                                               <field name='_price_subtotal'/>
                                       </group>
                    </tree>

                        <group col="4">
                            <button name="compute_scheduled_for" string="SCHEDULED_FOR ALTER" type="object" class="oe_highlight"/>
                        </group>
                </form>
            </field>
        </record>

        <record id="view_schedule_ratecards_tree" model="ir.ui.view">
            <field name="name">schedule.ratecards.tree</field>
            <field name="model">schedule.ratecards</field>
            <field name="arch" type="xml">
                <tree string="SCHEDULE RATECARDS">
                       <field name="user_id"/>
                        <field name="scheduled"/>
                        <field name="from_date" />
                        <field name="to_date" />
                </tree>
            </field>
        </record>

        <record id="action_schedule_ratecards" model="ir.actions.act_window">
            <field name="name">SCHEDULE RATECARDS</field>
            <field name="res_model">schedule.ratecards</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

          <menuitem id="timeorder_schedule_ratecards_menu" name="RATECARDS SCHEDULE" sequence="17" parent ="timeorder_management_menu"/>
        <menuitem  name="SCHEDULE RATECARDS" id="menu_schedule_ratecards"  action="action_schedule_ratecards"  parent="timeorder_schedule_ratecards_menu"/>
         </data>
</openerp>
