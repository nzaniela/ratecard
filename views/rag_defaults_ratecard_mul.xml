<openerp>
    <data>
        <record id="ratecard_mul_search_form_view" model="ir.ui.view">
            <field name="name">ratecard_mul.search.form</field>
            <field name="model">ratecard.mul</field>
            <field name="arch" type="xml">
                <search string="RateCard  Multiple">
                    <field name="name"/>
                    <!--<field name="outlet_id"/>-->
                </search>
            </field>
        </record>
        <act_window  id="action_open_ratecard_mul"
                     name="RateCard Type  Multiple Products"
                     res_model="product.template"
                     view_type="form"
                     view_mode="kanban,form,tree"
                     domain="[('multiple_ratecard_id', '=', active_id)]"/>
        <record id="view_ratecard_mul_form" model="ir.ui.view">
            <field name="name">ratecard_mul.form</field>
            <field name="model">ratecard.mul</field>
            <field name="arch" type="xml">
                <form string="RateCard Multiple" version="7.0">
                    <sheet>
                        <field name="logo" widget="image" class="oe_avatar oe_left"/>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name" string="RateCard Multiple "/>
                            </div>
                            <h1>
                                <field name="name"/>
                                 <group>
                                      <field name="min_weeks"/>
                                      <field name="max_weeks"/> 
                                </group>
                                    
                                <field name="multiple_ratecard_id"   widget="many2many"  />
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box">
                            <button
                                class="oe_inline oe_stat_button"
                                type="action"
                                name="%(action_open_ratecard_mul)d"
                                icon="fa-cubes">
                                <field name="products_count" string="Products" widget="statinfo" />
                            </button>
                        </div>
                        <group>
                            <!--<field name="outlet_id"/>-->
                             
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <act_window
            id="action_open_single_ratecard_mul"
            name="RateCard  Multiple"
            res_model="outlet.type"
            view_type="form"
            view_mode="kanban,form,tree"
            target="current"
            domain="[('product_ids', 'in', active_id)]"/>
        <record id="view_ratecard_mul_form" model="ir.ui.view">
            <field name="name">ratecard_mul.form</field>
            <field name="model">ratecard.mul</field>
            <field name="arch" type="xml">
                <form string="RateCard Multiple" version="7.0">
                    <sheet>
                        <field name="logo" widget="image" class="oe_avatar oe_left"/>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name" string="RateCard Type  Multiple Name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                                
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box">
                            <button
                                class="oe_inline oe_stat_button"
                                type="action"
                                name="%(action_open_ratecard_mul)d"
                                icon="fa-cubes">
                                <field name="products_count" string="Products" widget="statinfo" />
                            </button>
                        </div>
                         <group>
                                    <field name="outlet_id" on_change="onchange_outlet(outlet_id)" placeholder="OUTLET"/>
                                      <field name="outlet_type_id" placeholder="OUTLET TYPE" />
                                       <!--<field name="scheduled_for"/>-->
                                      <!--<field name="min_weeks"/>-->
                                         <!--<field name="max_weeks"/> -->
                                      <!--<field name="m2m_left2right" widget='many2many'/>-->
                                                             <!--<separator/>-->
                                     <field name="o2m_left_ids" widget="one2many" >
                                                            <tree>
                                                                <field name='code_left_right' widget='many2many'/>
                                                            </tree>
                                                            </field>
                                </group>
                       <separator/>
                        <field name="multiple_ratecard_id"    placeholder="Multiple" />
                         <group string="NO OF SPOTS / MENTIONS /ITEMS ">
                                     <!--<group  colspan="4" cols="4">-->
                                         <!--<field name='from_date'/>-->
                                          <!--<field name='to_date'/>-->
                                             <!--<field name='order_month'/>-->
                                          <!--<field name='order_day'/>-->
                                          <!--<field name='order_year'/>-->
                                          <!--<field name="test_day" options="{'datepicker':{'yearRange': 'c-100:c+0'}}"/>-->

                                      <!--</group>-->
                                                         
                         <field name="week_ids"   widget="one2many_list">
                                                                                            <tree  string="SPOTS" editable="top">
                                                                                                <field name='monday'/>
                                                                                                <field name='tuesday'/>
                                                                                                <field name='wednesday'/>
                                                                                                <field name='thursday'/>
                                                                                                <field name='friday'/>
                                                                                                <field name='saturday'/>
                                                                                                 <field name='sunday'/>
                                                                                                 <field name="spot_total"/> 
                                                                                             </tree>
                                                                                              <form  string="ALLOCATE">
                                                                                                <field name='monday'/>
                                                                                                <field name='tuesday'/>
                                                                                                <field name='wednesday'/>
                                                                                                <field name='thursday'/>
                                                                                                <field name='friday'/>
                                                                                                <field name='saturday'/>
                                                                                                 <field name='sunday'/>

                                                                                                 <field name="spot_total"/> 
                                                                                             </form>
                                                <group class="oe_subtotal_footer oe_right" colspan="2" name="spot_total">
                                                        <div class="oe_subtotal_footer_separator oe_inline">
                                                            <label for="spot_total" />
                                                        </div>
                                                        <field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                                    </group>
                             </field>
                             <!--<group class="oe_subtotal_footer oe_right" colspan="2" name="total">-->
                                    <!--<div class="oe_subtotal_footer_separator oe_inline">-->
                                        <!--<label for="total" />-->
                                        <!---<button name="button_dummy" states="draft,sent" string="(update)" type="object" class="oe_edit_only oe_link"/>-->
                                    <!--</div>-->
                                    <!--<field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>-->
                                <!--</group>-->
                            <field name="week_id" />
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_ratecard_mul_tree" model="ir.ui.view">
            <field name="name">ratecard_mul.tree</field>
            <field name="model">ratecard.mul</field>
            <field name="arch" type="xml">
                <tree string="ratecard_mul">
                    <field name="name"/>
                                    <field name="outlet_id" on_change="onchange_outlet(outlet_id)" placeholder="OUTLET"/>
                                    <field name="outlet_type_id" placeholder="OUTLET TYPE" />
                                      <field name="scheduled_for"/>
                                      <field name="min_weeks"/>
                                      <field name="max_weeks"/> 
                                                 <field name="week_ids"   widget="one2many_list">
                                                                                            <tree  string="SPOTS" editable="top">
                                                                                                <field name='monday'/>
                                                                                                <field name='tuesday'/>
                                                                                                <field name='wednesday'/>
                                                                                                <field name='thursday'/>
                                                                                                <field name='friday'/>
                                                                                                <field name='saturday'/>
                                                                                                 <field name="spot_total"/> 
                                                                                             </tree>
                            </field>
                    <field name="description"/>
                    <field name="multiple_ratecard_id" widget="many2many" />
                    <!--<field name="outlet_id"/>-->
                </tree>
            </field>
        </record>
        <record id="view_ratecard_mul_kanban" model="ir.ui.view">
            <field name="name">ratecard_mul.kanban</field>
            <field name="model">ratecard.mul</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="logo"/>
                    <field name="products_count"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette oe_semantic_html_override">
                                <a type="open">
                                    <img t-att-src="kanban_image('product.product', 'logo', record.id.value)"
                                         class="oe_kanban_image"/>
                                </a>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="name"/>
                                             <group>
                                                    <field name="min_weeks"/>
                                                    <field name="max_weeks"/> 
                                              </group>
                                            <field name="multiple_ratecard_id"   widget="many2many"  />
                                        </a>
                                    </h4>
                                    <div>
                                        <a name="%(action_open_ratecard_mul)d"
                                           type="action">
                                            <t t-esc="record.products_count.value"/> Products
                                        
                                        </a>
                                    </div>
                                    <span>
                                        <t t-esc="record.description.value.substr(0,200)"/>
                                        <t t-if="record.description.value.length > 200">
                                            <a type="open">
                                                <b>...</b>
                                            </a>
                                        </t>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="product_search_form_view" model="ir.ui.view">
            <field name="name">product.search.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="multiple_ratecard_id"/>
                </field>
                <group string='Group by...' position="inside">
                    <filter string="RateCard Multiple" name="groupby_ratecard_mul" domain="[]"
                            context="{'group_by' : 'multiple_ratecard_id'}"/>
                </group>
            </field>
        </record>
        <record id="view_product_template_search_outlet" model="ir.ui.view">
            <field name="name">product.template.search.ratecard_mul</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="multiple_ratecard_id"/>
                </field>
                <group string='Group by...' position="inside">
                    <filter string="RateCard Multiple" name="groupby_ratecard_mul" domain="[]"
                            context="{'group_by' : 'multiple_ratecard_id'}"/>
                </group>
            </field>
        </record>
        <record id="product_template_form_ratecard_mul_add" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <group>
                        <field name="multiple_ratecard_id" placeholder="RateCard  Multiple"/>
                    </group>
                </field>
               
            </field>
        </record>
        <record id="view_product_template_kanban_ratecard_mul" model="ir.ui.view">
            <field name="name">product kanban view: add ratecard_mul</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view" />
            <field name="arch" type="xml">
                <xpath expr="//h4" position="after">
                    <div>
                        <a t-if="record.multiple_ratecard_id" type="action"
                           name="%(action_open_single_ratecard_mul)d">
                            <field name="multiple_ratecard_id"/>
                        </a>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="view_product_variant_kanban_ratecard_mul" model="ir.ui.view">
            <field name="name">product variant kanban view: add ratecard_mul</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_kanban_view" />
            <field name="arch" type="xml">
                <xpath expr="//h4" position="after">
                    <div>
                        <a t-if="record.multiple_ratecard_id" type="open">
                            <field name="multiple_ratecard_id"/>
                        </a>
                    </div>
                </xpath>
            </field>
        </record>
       
        <record id="view_product_template_tree_ratecard_mul" model="ir.ui.view">
            <field name="name">product tree view: add ratecard_mul</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="multiple_ratecard_id"/>
                </field>
            </field>
        </record>
        <record id="view_product_variant_tree_ratecard_mul" model="ir.ui.view">
            <field name="name">product variant tree view: add ratecard_mul</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="multiple_ratecard_id"/>
                </field>
            </field>
        </record>
      
        <record model="ir.actions.act_window" id="action_ratecard_mul">
            <field name="name">RateCard Multiple</field>
            <field name="res_model">ratecard.mul</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>
        <!--<menuitem id="timeorder_ratecard_menu" name="RATE CARD MULTIPLE DEFAULTS" sequence="10" parent ="timeorder_management_menu"/>-->

        <menuitem id="timeorder_ratecard_multiple" name="DEFAULTS MULTIPLE RATECARD  " sequence="10" parent ="timeorder_management_menu"/>

        <menuitem  name="RADIO MULTIPLE RATE  CARD"  id="menu_ratecard_mul"  action="action_ratecard_mul"  parent="timeorder_ratecard_multiple"/>
    </data>
</openerp>